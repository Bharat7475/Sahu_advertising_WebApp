    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Dashboard/getallCount',
                type: 'GET',
                success: function (data) {
                    if (data.success) {
                      
                        const empCountElement = document.getElementById('empCount');
                        empCountElement.setAttribute('data-count', data.count);
                    } else {
                        $('#empCount').text('Error: ' + data.message);
                    }
                },
                error: function () {
                    $('#empCount').text('Error occurred while fetching data.');
                }
            });
        });
    </script>

